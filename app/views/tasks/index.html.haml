%h1=t('.title')

%table
  %thead
    %tr
      %th=t('.name')
      %th=t('.description')
      %th=t('.due_date')
      %th=t('category')
      %th
      %th
      %th

  %tbody
    - @tasks.each do |task|
      %tr
        %td= task.name
        %td= task.description
        %td= task.due_date
        %td= task.category
        %td= link_to t('common.show'), task
        %td= link_to t('common.edit'), edit_task_path(task)
        %td= link_to t('common.destroy'), task, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to t('.new_task'), new_task_path
